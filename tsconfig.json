{
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",             // Define a pasta de saída dos arquivos compilados
    "rootDir": "./src",             // Define a pasta de origem dos arquivos TypeScript
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],        // Inclui todos os arquivos TypeScript no diretório src
  "exclude": ["node_modules"]        // Exclui a pasta node_modules da compilação
}
